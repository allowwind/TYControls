<tyCtrl:TYWindow
    x:Class="TYWIndow.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TYWIndow.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tyCtrl="clr-namespace:TYControls;assembly=TYControls"
    Title="MainWindow"
    Width="800"
    Height="450"
    Style="{StaticResource WindowBusyStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <tyCtrl:TYPageControl
            x:Name="pager"
            Grid.Row="1"
            Height="30"
            CurrentIndexChanged="Pager_CurrentIndexChanged" />
    </Grid>
</tyCtrl:TYWindow>
